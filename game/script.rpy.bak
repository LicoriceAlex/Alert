label quiz:
    #Initialize score
    $ quiz_score = 0

    # 1st Question
    "Было два козла, сколько?"
    menu:
        "Правильный ответ":
            "Правльный ответ"
            $ quiz_score += 1
        "Неправильный ответ":
            "Неправильный ответ"
       
    "Было три козла, сколько?"
    menu:
        "Правильный ответ":
            "Правльный ответ"
            $ quiz_score += 1
        "Неправильный ответ":
            "Неправильный ответ"

    # Check the quiz score
    if quiz_score == 2:
        # Win
        "Поздравляю, ты правильно ответил на вопросы"
        # Did he win? Yes.
        $ win = True
    else:
        # Lose
        "Ты неправильно ответил на вопросы....."
        # Did he win? No.
        $ win = False

    return
